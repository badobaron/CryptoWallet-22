<?xml version="1.0" encoding="utf-8"?>
<manifest package="org.kjpm.com.cryptowallet"
          xmlns:android="http://schemas.android.com/apk/res/android">

    <uses-permission android:name="android.permission.INTERNET"/>
    <uses-permission android:name="android.permission.CAMERA"/>
    <uses-permission android:name="android.permission.ACCESS_NETWORK_STATE"/>

    <application
        android:name="org.kjpm.com.cryptowallet.CryptoWalletApplication"
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name="org.kjpm.com.cryptowallet.MainActivity">
        </activity>
        <activity android:name="org.kjpm.com.cryptowallet.AddWallet">
        </activity>
        <activity
            android:name="org.kjpm.com.cryptowallet.activity.Dashboard"
            android:label="@string/title_activity_dashboard"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.MAIN"/>

                <category android:name="android.intent.category.LAUNCHER"/>
            </intent-filter>
        </activity>
        <activity android:name="org.kjpm.com.cryptowallet.activity.QrScanner">
        </activity>
    </application>

</manifest>